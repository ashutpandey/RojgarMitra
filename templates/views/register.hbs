<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}

    <div class="login-box">
    <div class="login-form">
        <form action="/api/v1/users/register" method="POST">
            <div class="input-field">
                <h3>Name :</h3>
                <label for="name">
                    <input type="text" id="name" name="name" placeholder="John" required>
                </label>
            </div>
            <div class="input-field">
                <h3>Email :</h3>
                <label for="email">
                    <input type="email" id="email" name="email" placeholder="abcd1234@gmail.com" required>
                </label>
            </div>
            <div class="input-field">
                <h3>Password :</h3>
                <label for="password">
                    <input type="password" id="password" name="password" placeholder="Enter password..." required>
                </label>
            </div>
            <input class="login-btn" type="submit" value="register">

            <div class="sign_up">
            <p>Already have an account ? <a class="btn2" href="/login">login</a></p>
            </div>
        </form>
    </div>
    </div>

